<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Title</th>
      <th>Kind</th>
      <th>Other</th>
      <th>Proposed space</th>
      <th>Proposed time</th>
      <th>Submitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.team %></td>
        <td><%= event.title %></td>
        <td><%= event.kind %></td>
        <td><%= event.other %></td>
        <td><%= event.proposed_space %></td>
        <td><%= event.proposed_time %></td>
        <td><%= event.submitter %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

