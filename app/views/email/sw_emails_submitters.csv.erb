<%=
  CSV.generate(headers: true) do |csv|
    csv << [:email, :stev_id, :stev_class, :name, 'Foreign Key']

    $instance = Settings.instance_slug + ' ' if Settings.instance_slug

    Event.all.each do |event|
      emails = event.submitter&.email&.split(/[\,\/]/) || []

      emails.each_with_index do |email, idx|
        $id_string = emails.many? ? ' ' + idx.to_s : nil

        csv << [
            email,
            event.submitter.id,
            event.submitter.class.name,
            event.submitter.full_name,
            $instance.to_s + event.submitter.class.name + ' ' + event.submitter.id.to_s + $id_string.to_s
        ]
      end
    end
  end
%>