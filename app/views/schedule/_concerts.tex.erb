\section*{<%= Settings.schedule.concerts[c_id] %>}

<% @concerts.group_by{|evt| (evt.first_date - 6.hours).to_date }.each do |day| %>
    \subsection*{<%= format_one_date day.first %>}
    Ώρα έναρξης: <%= format_time day.second.first.first_repetition %>

    <% day.second.each do |evt| %>
        \begin{stayonpage}
        \paragraph{<%= evt.team.texcape %>}
        <%= evt.title == 'Συναυλία' ? '\vspace{15pt}' : evt.title.texcape + "\n" %>
        <%= evt.abstract.texcape %>
        \end{stayonpage}
    <% end %>
    \newpage
<% end %>
