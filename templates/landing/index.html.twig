{% extends 'base.html.twig' %}

{% block title %}Stev Manager {{ controller_name }}!{% endblock %}

{% block container %}
    <style>
        .html, body {
            background-color: #fff;
            color: #636b6f;
            font-family: 'Noto Sans', 'Ubuntu Light', 'Roboto', sans-serif;
            font-weight: 200;
            height: 100vh;
            margin: 0;
        }

        .full-height {
            height: 100vh;
        }

        .flex-center {
            align-items: center;
            display: flex;
            justify-content: space-around;
            flex-direction: column;
        }

        .position-ref {
            position: relative;
        }

        .top-right {
            position: absolute;
            right: 10px;
            top: 18px;
        }

        .content {
            text-align: center;
        }

        .title {
            font-size: 84px;
        }

        .links > a {
            color: #636b6f;
            padding: 0 25px;
            font-size: 12px;
            font-weight: 600;
            letter-spacing: .1rem;
            text-decoration: none;
            text-transform: uppercase;
        }

        .m-b-md {
            margin-bottom: 30px;
        }
    </style>

    <div class="flex-center position-ref full-height">
        <div class="top-right links">
        </div>

        <div class="content">
            <div class="title m-b-md">
                <abbr title="Student Event">Stev</abbr> Manager
            </div>

            <div class="links">
                {% for instance in instances %}
                    <a href="{{ path('instance', { instance: instance.id }) }}">{{ instance.name }}</a>
                {% endfor %}

            </div>
        </div>

        <footer class="landing-footer text-muted text-center">
            <small>Icon set: <em>Multimedia Collection</em> by <a href="https://www.flaticon.com/authors/gregor-cresnar">Gregor Cresnar</a></small><br>
            <small>Calendar icon: <em><a href="https://thenounproject.com/alepio/collection/calendar-set-icons/">Calendar</a></em> by <a href="https://thenounproject.com/alepio">AlePio</a></small>
        </footer>
    </div>
{% endblock %}

