{% extends 'base.html.twig' %}

{% block title %}Find & Replace{% endblock %}

{% block body %}
    <h3>{% trans %}Find & Replace{% endtrans %}</h3>

    <div class="btn-group btn-group-toggle btn-group-sm btn-block mb-3" data-toggle="buttons">
        <label class="btn btn-light btn-sm w-100 active">
            <input type="radio" name="options" id="option1" autocomplete="off" checked> Regular
        </label>
        <label class="btn btn-light btn-sm w-100">
            <input type="radio" name="options" id="option2" autocomplete="off"> RegEx
        </label>
    </div>

    <div class="input-group mb-3 input-group-lg">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
        </div>
        <input type="text" class="form-control" placeholder="Search&hellip;" aria-label="Username"
               aria-describedby="basic-addon1">
    </div>

    <div class="row">
        <div class="col-md">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Replace&hellip;"
                       aria-label="Username" aria-describedby="basic-addon1">
            </div>
        </div>
        <div class="col-md-auto">
            <button type="submit" class="btn btn-light"><i class="fas fa-search"></i> Find</button>
            <button type="submit" class="btn btn-danger"><i class="fab fa-searchengin"></i> Find &amp; Replace</button>
        </div>
    </div>
{% endblock %}
