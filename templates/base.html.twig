<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-{% if instance|default and instance.colour %}{{ instance.colour }}{% else %}dark{% endif %}">

    {% if instance|default(null) %}
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" title="Back" href="{{ path('landing') }}">&laquo;</a>
            </li>
        </ul>
        <a class="navbar-brand"
           href="{{ path('instance', {instance: instance.id}) }}">{{ instance.name }}</a>
    {% else %}
        <a class="navbar-brand" href="{{ path('landing') }}">Stev Manager</a>
    {% endif %}


    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar"
            aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbar">
        <ul class="navbar-nav mr-auto">
            {% set controller = app.request.attributes.get('_controller') %}
            {% if instance|default(null) %}
                <li class="nav-item {% if 'InstanceController' in controller %}active{% endif %}">
                    <a class="nav-link"
                       href="{{ path('instance', {instance: instance.id}) }}">Home</a>
                </li>
                <li class="nav-item {% if 'EventController' in controller %}active{% endif %}">
                    <a class="nav-link" href="{{ path('event_index', {instance: instance.id}) }}">Events</a>
                </li>
                <li class="nav-item {% if 'VolunteerController' in controller %}active{% endif %}">
                    <a class="nav-link" href="#">Volunteers</a>
                </li>
                <li class="nav-item {% if 'CalendarController' in controller %}active{% endif %}">
                    <a class="nav-link" href="{{ path('calendar', {instance: instance.id}) }}">Calendar</a>
                </li>
                <li class="nav-item {% if 'ImportController' in controller %}active{% endif %}">
                    <a class="nav-link" href="{{ path('import', {instance: instance.id}) }}">Import</a>
                </li>
                <li class="nav-item {% if 'ExportController' in controller %}active{% endif %}">
                    <a class="nav-link" href="#">Export</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('landing') }}">Home</a>
                </li>
            {% endif %}
        </ul>
        <ul class="navbar-nav my-2 my-md-0">
            {% if instance %}
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="{{ path('landing') }}" id="dropdown01"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Instances</a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown01">
                    {% for menu_instance in instance_repository.findAll|default([]) %}
                        <a
                                class="dropdown-item {% if instance|default and menu_instance.id == instance.id %}active{% endif %}"
                                href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({instance: menu_instance.id})) }}">
                            {{ menu_instance.name }}
                        </a>
                    {% endfor %}
                </div>
            </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('sonata_admin_redirect') }}">Admin</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('sonata_user_admin_security_logout') }}">Logout</a>
            </li>
        </ul>
    </div>
</nav>

{% block container %}
    <main class="container" role="main">
        <br>
        {% block alerts %}
            {% if app.request.hasPreviousSession %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type }}" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
        {% endblock %}

        {% block breadcrumbs %}
            {% set controller = app.request.attributes.get('_controller')|slice(15)|replace({'Controller':''})|split('::') %}

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb text-small">
                    {% if not instance|default() %}
                        <li class="breadcrumb-item active" aria-current="page">Home</li>
                    {% elseif controller[0] == 'Instance' %}
                        <li class="breadcrumb-item"><a href="{{ path('landing') }}">Home</a></li>
                        <li class="breadcrumb-item active"
                            aria-current="page">{{ instance.name }}</li>
                    {% else %}
                        <li class="breadcrumb-item"><a href="{{ path('landing') }}">Home</a></li>
                        <li class="breadcrumb-item"><a
                                    href="{{ path('instance', {instance: instance.id}) }}">{{ instance.name }}</a>
                        </li>
                        <li class="breadcrumb-item active"
                            aria-current="page">{{ controller[0] }}</li>
                        <li class="breadcrumb-item active">{{ controller[1]|title }}</li>

                    {% endif %}
                </ol>
            </nav>
        {% endblock %}

        {% block body %}{% endblock %}
    </main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>
