<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">


            {% if instance|default(null) %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" title="Back" href="{{ path('landing') }}">&laquo;</a>
                    </li>
                </ul>
                <a class="navbar-brand" href="{{ path('instance', {instance: instance.id}) }}">{{ instance.name }}</a>
            {% else %}
                <a class="navbar-brand" href="{{ path('landing') }}">Stev Manager</a>
            {% endif %}


            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    {% if instance|default(null) %}
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('instance', {instance: instance.id}) }}">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Volunteers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Import</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Export</a>
                        </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('landing') }}">Home</a>
                    </li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav my-2 my-md-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="{{ path('landing') }}" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Instances</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown01">
                            {% for instance in instances|default([]) %}
                                <a class="dropdown-item" href="{{ path('instance', {instance: instance.id}) }}">{{ instance.name }}</a>
                            {% endfor %}
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('sonata_admin_redirect') }}">Admin</a>
                    </li>
                </ul>
            </div>
        </nav>

        {% block container %}
            <main class="container" role="main">
                {% block body %}{% endblock %}
            </main>
        {% endblock %}

        {% block javascripts %}{% endblock %}
        <script src="{{ asset('build/app.js') }}"></script>
    </body>
</html>
